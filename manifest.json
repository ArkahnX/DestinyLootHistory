{
	"manifest_version": 2,
	"name": "Destiny Loot Tracker",
	"version": "0.2.1",
	"description": "Robust interface to manage gear, weapons, and items in destiny.",
	"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"short_name": "Loot",
	"background": {
		"scripts": [
			"scripts/backend.js"
		]
	},
	"permissions": [
		"storage",
		"*://*.bungie.net/*",
		"cookies",
		"tabs",
		"unlimitedStorage",
		"downloads"
	],
	"browser_action": {
		"default_icon": "icon16.png"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"incognito": "split",
	"offline_enabled": false,
	"options_page": "window.html"
}