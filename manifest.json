{
	"manifest_version": 2,
	"name": "Destiny Loot History",
	"version": "1.0.0",
	"description": "Robust interface to manage gear, weapons, and items in destiny.",
	"icons": {
		"16": "app/icon16.png",
		"32": "app/icon32.png",
		"48": "app/icon48.png",
		"128": "app/icon128.png"
	},
	"short_name": "Loot",
	"background": {
		"scripts": [
			"app/scripts/backend.js"
		]
	},
	"permissions": [
		"storage",
		"*://*.bungie.net/*",
		"cookies",
		"unlimitedStorage"
	],
	"optional_permissions": ["downloads"],
	"browser_action": {
		"default_icon": "app/icon16.png"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"incognito": "split",
	"offline_enabled": false,
	"options_page": "app/options.html"
}